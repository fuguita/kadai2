<h1>Editing Book</h1>

<% if @book.errors.any? %>
<div class="errors">
 <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
</div>

<%= form_with model: @book do |f| %>

  <div class="field">
<label for="book_tittle">Title</label><br>
<%= f.text_field :title %><br>
</div>

<div class="field">
  <label for="book_body">Body</label><br>
<%= f.text_area :body %>
</div>
<br>
<%= f.submit :'Update Book' %>

<% end %>

<div class="edit_link">
<%= link_to 'show', book_path(@book.id) %>|
<%= link_to 'Back', '/books' %>
</div>

