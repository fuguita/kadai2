<body>
<h1>Books</h1>

<table cellpadding:>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
<% @books.each do |book| %>

  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
 <td><%= link_to 'Show', book_path(book.id) %></td>
  <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
  <td><%= link_to 'Destroy', book_path(book.id), method: :delete, "deta-confirms" => "Are you sure?" %></td>

 </tr>
<% end %>
</tbody>

</table>


<div class="New-Book">
  <h2>New Book</h2>

  <% if @book.errors.any? %>
 <div class="errors">
 <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
</div>


<%= form_with model: @book do |f| %>

<div class="field">
<label for="book_tittle">Title</label><br>
<%= f.text_field :title %><br>
</div>

<div class="field">
  <label for="book_body">Body</label><br>
<%= f.text_area :body %>
</div>
<br>
<%= f.submit :'Create Book' %>

<% end %>
</div>

</body>



